{
  "name": "carepulse",
  "version": "1.0.0",
  "description": "CarePulse - Collaborative family/patient care management platform",
  "scripts": {
    "install:all": "cd client && npm install && cd ../server && npm install && cd ../ai-service && pip install -r requirements.txt",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:ai": "cd ai-service && uvicorn main:app --reload",
    "build:client": "cd client && npm run build",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "start:ai": "cd ai-service && uvicorn main:app --host 0.0.0.0 --port 8000"
  },
  "keywords": ["healthcare", "care-management", "mern", "react", "nodejs"],
  "author": "",
  "license": "MIT"
}

